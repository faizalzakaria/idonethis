<div class="cover-container">
    <div class="inner cover">

        <h1>Change your password</h1>
        
        <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                     html: { method: :put, class: "form-vertical" }) do |f| %>
            
            <% if resource.errors.any? %>
                <div class="alert alert-danger" role="alert">
                    <%= devise_error_messages! %>
                </div>
            <% end %>
            
            <%= f.hidden_field :reset_password_token %>
            
            <div class="form-group">
                <%= f.label :password, "New password", class: "control-label" %><br />
                <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
            </div>
            
            <div class="form-group">
                <%= f.label :password_confirmation, "Confirm new password", class: "control-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
            
            <%= f.submit "Change my password", class: "btn btn-lg btn-success" %>
        <% end %>
        
        <%= render "users/shared/links" %>
    </div>
</div>
